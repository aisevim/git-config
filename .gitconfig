[user]
	email = user@user.com
	name = user

[core]
	editor = code --wait
	excludesfile =  ~/.git-custom/.gitignore
	hooksPath = ~/.git-custom/hooks

[fetch]
	prune = true

[log]
	date = format:%d/%m/%Y %H:%M
	abbrevCommit = true

[alias]
	back = "!f() { git reset HEAD~${1}; }; f"
	lo = log --oneline --graph --decorate --pretty=format:'%C(yellow)%h%Creset -%C(auto)%d%Creset %C(auto)%s%Creset %C(white dim)%an %ad%Creset'
	s = status
	search = lo --all --grep
	squash = "!f() { \
		git reset --soft HEAD~${1}; \
		git commit --amend --no-edit; \
	}; f"

[color "branch"]
	current = green reverse bold
