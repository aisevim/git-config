[user]
	email = user@user.com
	name = Full Name

[core]
	editor = code --wait
	pager = delta
	whitespace = -trailing-space
	ignorecase = false

[fetch]
	prune = true

[log]
	date = format:%d/%m/%Y %H:%M
	abbrevCommit = true

[interactive]
	diffFilter = delta --color-only

[diff]
	renames = true

[merge]
	conflictStyle = zdiff3

[mergetool]
  keepBackup = false
  keepTemporaries = false

[push]
	autoSetupRemote = true
	followTags = true

[branch]
	autoSetupRebase = always

[fetch]
  recurseSubmodules = on-demand

[rebase]
  autoStash = true

[submodule]
	recurse = true

[help]
	autoCorrect = prompt

[gc]
	reflogExpire = 180 days
	reflogExpireUnreachable = 60 days

[alias]
	edit-config = config --global --edit
	back = reset HEAD~1
	l = log --oneline --graph --decorate --pretty=format:'%C(yellow)%h%Creset -%C(auto)%d%Creset%  %C(auto)%s%Creset %C(italic red)%an %C(dim yellow)%ad%Creset'
	lo = log --oneline --graph --decorate --pretty=format:'%C(yellow)%h%Creset -%<(75,trunc) %C(auto)%s%Creset%<(10,trunc) %C(italic red)%an %C(dim yellow)%ad%Creset %C(auto)%d%Creset'
	s = status --short --branch
	st = status
	pushf = push --force-with-lease
	nope = reset --keep HEAD@{1}
	lost-commit = fsck --full --no-reflogs --unreachable --lost-found

[color]
  ui = auto

[delta]
	navigate = true
	dark = true
	line-numbers = true
	hyperlinks = true
	side-by-side = true
